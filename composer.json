{
    "name": "venta/framework",
    "description": "Venta Framework",
    "authors": [
        {
            "name": "Konstantins Zukovs",
            "email": "kz@scandiweb.com"
        },
        {
            "name": "Alexey Rehov",
            "email": "aleksejs@scandiweb.com"
        },
        {
            "name": "Vsevolods Mihailovs",
            "email": "vsevolods@scandiweb.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Venta\\": "src/Venta",
            "Abava\\": "src/Abava"
        },
        "exclude-from-classmap": [
            "**/tests/"
        ]
    },
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "mockery/mockery": "^0.9.5"
    },
    "require": {
        "php": "~7.0",
        "symfony/console": "^3.1",
        "filp/whoops": "^2.1",
        "vlucas/phpdotenv": "^2.3",
        "monolog/monolog": "^1.19",
        "nikic/fast-route": "^1.0",
        "zendframework/zend-diactoros": "^1.3",
        "container-interop/container-interop": "^1.1",
        "psr/http-message": "^1.0",
        "cache/array-adapter": "^0.4",
        "cache/namespaced-cache": "^0.1",
        "psy/psysh": "@stable",
        "php-ds/php-ds": "^1.1"
    },
    "replace": {
        "abava/container": "self.version",
        "abava/http": "self.version",
        "abava/routing": "self.version",
        "abava/console": "self.version"
    }
}
